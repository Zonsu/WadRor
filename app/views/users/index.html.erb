<h1>Listing users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Username</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><% if user.banned and current_user and current_user.admin %>
              <span class="label label-info">Frozen</span>
          <%end%></td>
      </tr>
    <% end %>
  </tbody>
</table>

